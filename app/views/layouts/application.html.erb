<!DOCTYPE html>
<html>
<head>
<title>HSTU Books Online Store</title>
<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tag %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
<%= @page_title || "HSTU Books Store Online" %>
</div>

<div id="nav">
<ul>
<li><a href="..">All Books</a></li>
<li><a href="..">About Me</a></li>
<li><a href="..">Blog and News</a></li>
<li><a href="..">Contact Me</a></li>
</ul>
</div>

<div id="columns">
    <div id="side">
     <div id="cart">
       <% if @cart %>
           <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
           <%= render @cart %>
          <% end %>
       <% end %>
    </div>
    <div class="add">
    <% if session[:user_id] %>
      <ul>
        <li><%= link_to 'Orders', orders_path %></li>
        <li><%= link_to 'Products', products_path %></li>
        <li><%= link_to 'Users', users_path %></li>
      </ul>
      <%= button_to 'Logout', logout_path, method: :delete %>
    <% end %>
    
    <%= image_tag("images1.jpeg", :alt => "rss feed") %>
    <%= image_tag("images2.jpeg", :alt => "rss feed") %>
  
      
    </div>
     

    </div>
    
    
    
    <div id="main">
      <%= yield %>
    </div>
</div>
<div id="footer">
 <p>Copyright Â© 2013 AnarySoftBD. All Rights Reserved </p>
</div>
</body>
</html>
